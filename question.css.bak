* {
    font-family: 'Poppins', sans-serif;
    margin: 0;
}

body {
	
	
    margin: 0;background-position: center;
    background-size: cover; padding: 0;
    background-image: url('back1.webp');
    height: 100%;backdrop-filter: blur(26px);
    background-image: no-repeat;
}

body:hover {
    backdrop-filter: blur(21px);
}

header {
    position: fixed; width: 100%; 
    top: 0; z-index: 1000;
    
    
}

nav {
    top: 0; height: 100px; align-items: center;
    display: flex; width: 100%; color: white;
    background: linear-gradient(to bottom, black, white);

}

nav:hover {
    background: linear-gradient(to bottom, #001a66, white);  border-radius: 30px;
   
}

nav .icon {
    color: #fff; font-size: 20px; font-weight: 800;cursor: pointer;
    
    
    
}

nav ul {
    display: flex;list-style-type: none;  padding: 0; 
    margin: auto 20px;
    
}

nav ul li {
    margin: 0 10px; 
}

nav ul li a {
    color: #fff;  text-decoration: none;font-size: 20px;
    letter-spacing: 1px;padding: 1px 10px;

}


nav ul li a:hover {
    background: linear-gradient(to bottom, black, white);
    border-radius: 30px;
}

.search-box {
	margin-right: 20px;   height: 20px; box-shadow: 0 10px 20px rgba(0, 128, 0, 0.2);
    position: relative;background: white;   width: 200px; border-radius: 30px;    left:50px;
     align-items: center; display: flex; padding: 10px 20px;
}

.search-box:hover {
    width: 250px; 
}


.search-box input {
    background: transparent;outline: none; 
    font-size: 16px;  border: none; 
 
}

.search-box a {
    margin-left: 10px;
}

.search-box .fas {
    color: blue;
    cursor: pointer;
    font-size: 18px;
}

.dropdown {
    position: relative; display: inline-block;
   
}

.dropdown-content {
    display: none; z-index: 1; background-color: #f9f9f9; position: absolute;
    box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2); width: 300px;

}

.dropdown-content a {
    color: black; font-size: 10px;padding: 12px 13px;
    
}

.dropdown-content a:hover {
    background-color: lightblue;text-align:center;font-size: 20px;
    border-radius: 39px;width: 340px;height:30px;
	
}

.dropdown:hover .dropdown-content {
    display: block; border-radius: 39px;background-color: #ffccb3;

}

.dropdown:hover .dropbtn {
    background-color: lightblue;
}

footer {
	margin-top: auto;height: 100px; width: 100%; position: fixed; 
    background: linear-gradient(to bottom, white, black);
    color: white;  align-items: center;margin: 0; padding:0;

}

footer:hover {
	
    background: linear-gradient(to bottom , white, #001a66);
    border-radius: 34px;

}

.button:hover {
    background: linear-gradient(to bottom, black, white);
    width: 200px; border-radius: 39px;
 
}

.address, .telephone, .linkedin, .team, .contact {
    display: inline-block;  font-weight: bold;  border-radius: 34px;
    padding: 15px 30px;    color: yellow;
 
}
/////////////////////////////////////////////////
.button-question {
    position: relative; /* Relative position for absolute positioning of the button */
    width: 200px; /* Full width to ensure the container spans across the screen or parent element */
    padding-top: 120px; /* Space from the top to clear any fixed navbar */
    height: 20px; /* Setting a height so that the container has dimension */
}

#questionBtn {
    position: absolute; /* Absolute positioning relative to its nearest positioned ancestor */
    left: 308px; /* Set left edge of the button at 50% of its parent container */
    top:120px;
	width:600px;
	height:40px;
    font-size: 16px;
    font-weight: bold; /* Bold text for emphasis */
    color: black;
    background-color: lightblue; /* Primary blue color */
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.2s; /* Smooth transition for hover effect */
}

#questionBtn:hover {
    background: linear-gradient(to bottom, black, white);
}

/* Styling for the form container */
.form-container {
    max-width: 600px; /* Maximum width of the form */
    margin: 0 auto;  /* Center the form horizontally */
    padding: 20px;
    background-color: #d9d9d9; /* Light gray background */
    border-radius: 10px; /* Rounded corners */
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
	 margin-top: 80px;
	 font-weight: bold;
	 border: 5px solid #00ffff;; /* Subtle border */
}

/* Styling for individual form groups */
.form-group {
    margin-bottom: 15px; /* Space between form fields */
	
}

/* Styling for input fields and select elements */
.form-container input[type="text"],
.form-container input[type="date"],
.form-container select {
    width: 100%; /* Full width to fill the container */
    padding: 10px; /* Sufficient padding for typing comfort */
    border: 5px solid #664400; /* Subtle border */
    border-radius: 5px; /* Rounded corners */
	
    box-sizing: border-box; /* Include padding and border in the element's total width and height */
	background-color:#e6e6e6;
	font-weight: bold;
	
}
.form-container input[type="text"]:hover,
.form-container input[type="date"]:hover,
.form-container select:hover {
	background-color:#e6f9ff;
}

/* Specific button for form submission */
input[type="submit"] {
    width: 100%;  /* Full width to match input fields */
    background-color: lightblue;  /* Green color for submission */
    color: white; /* Text color */
    border: none; /* No border */
    padding: 12px 20px; /* Padding */
    border-radius: 5px; /* Rounded corners */
    cursor: pointer; /* Cursor indicates it's clickable */
    margin-top: 10px; /* Space from the last form field */
	color: black;
	font-weight: bold;
}

input[type="submit"]:hover {
   background: linear-gradient(to bottom, black, white);
}
