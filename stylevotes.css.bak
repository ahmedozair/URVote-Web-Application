            border: 2px solid #ccc;
            border-radius: 4px;
			background-color:#e6f9ff;
			
        }
        .btn {
            background-color: lightblue;
            color: white;
            padding: 14px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        .btn:hover {
              background: linear-gradient(to bottom, black, white);
        }
        label {
            font-weight: bold;
        }
		
	
        /* Custom radio button styling */
        .answer-container input[type="radio"] {
            -webkit-appearance: none;
            -moz-appearance: none;
            appearance: none;
            width: 16px;
            height: 16px;
            border: 2px solid #333;
            background-color: white;
            vertical-align: middle;
            cursor: pointer;
            position: relative;
        }

        /* Square appearance and checked style */
        .answer-container input[type="radio"]:checked {
            background-color: #004d00;
            border-color: #004d00;
        }

        /* Align labels with the square radio buttons */
        .answer-container label {
            display: inline-block;
            margin-left: 5px;
            vertical-align: middle;
            cursor: pointer;
        }
  
